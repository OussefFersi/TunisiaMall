                      </tr>
                    </thead>


                    <tbody>
                    {% for entity in pagination %}    
                      <tr>
                        <td>{{ entity.nom }}</td>
                        <td>{{ entity.cordonne }}</td>
                        <td>{{ entity.idU}}</td>
                        
                        
                        <td>
                            <form name="form" method="post" action="{{path('boutique_delete',{ 'id': entity.id })}}">
